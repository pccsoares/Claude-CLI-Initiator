<Window x:Class="ClaudeCliInitiator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClaudeCliInitiator"
        mc:Ignorable="d"
        Title="Claude CLI Initiator" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/icon.ico">
    <Window.Resources>
        <local:LengthToVisibilityConverter x:Key="LengthToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="SearchBox"
                     Padding="25,8,8,8"
                     FontSize="14"
                     TextChanged="SearchBox_TextChanged"/>
            <TextBlock Text="&#x1F50D;"
                       FontSize="14"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"
                       IsHitTestVisible="False"/>
            <TextBlock x:Name="SearchPlaceholder"
                       Text="Search folders..."
                       Foreground="Gray"
                       FontSize="14"
                       VerticalAlignment="Center"
                       Margin="28,0,0,0"
                       IsHitTestVisible="False"
                       Visibility="{Binding ElementName=SearchBox, Path=Text.Length, Converter={StaticResource LengthToVisibilityConverter}}"/>
        </Grid>

        <!-- Folder List -->
        <ListBox x:Name="FolderList"
                 Grid.Row="1"
                 MouseDoubleClick="FolderList_MouseDoubleClick"
                 KeyDown="FolderList_KeyDown">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="&#x1F4C1;"
                                   Grid.Column="0"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>

                        <TextBlock Text="{Binding Name}"
                                   Grid.Column="1"
                                   FontSize="14"
                                   VerticalAlignment="Center"/>

                        <Border Grid.Column="2"
                                Background="#E0E0E0"
                                CornerRadius="10"
                                Padding="8,2"
                                Margin="8,0,0,0">
                            <TextBlock Text="{Binding Score}"
                                       FontSize="12"
                                       Foreground="#666666"/>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Refresh Button -->
        <Button x:Name="RefreshButton"
                Grid.Row="2"
                Content="Refresh"
                Padding="15,8"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                Click="RefreshButton_Click"/>
    </Grid>
</Window>
